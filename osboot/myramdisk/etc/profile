echo -e "${BLUE}  █████                   ███████     █████████   ██  ████████  ██████████    "
echo -e "${INDIGO} ░░███                  ███░░░░░███  ███░░░░░███ ███ ███░░░░███░███░░░░░░█    "
echo -e "${VIOLET} ███████    ██████     ███     ░░███░███    ░░░ ░░░ ░░░    ░███░███     ░     "
